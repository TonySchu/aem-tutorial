<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Sliderkonfiguration"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        
        <arrows jcr:primaryType="nt:unstructured"
                fieldLabel="Pfeile anzeigen" name="./arrows" xtype="checkbox"/>
        <!-- dynamisches multifield -->
        <bilder
                jcr:primaryType="cq:Widget"
                hideLabel="false"
                name="./images"
                title="Sliderelemente"
                xtype="multifield">
            <fieldConfig
                    jcr:primaryType="cq:Widget"
                    border="true"
                    hideLabel="true"
                    layout="form"
                    padding="10px"
                    width="1000"
                    xtype="multi-field-panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <bildPfad
                            jcr:primaryType="cq:Widget"
                            dName="bildPfad"
                            fieldLabel="Bilder Pfad"
                            xtype="pathfield"/>
                    <alt
                            jcr:primaryType="cq:Widget"
                            dName="alt"
                            fieldLabel="Alt"
                            xtype="textfield"/>
                    <h3
                            jcr:primaryType="cq:Widget"
                            dName="überschrift"
                            fieldLabel="Überschrift"
                            xtype="textfield"/>
                    <p
                            jcr:primaryType="cq:Widget"
                            dName="text"
                            fieldLabel="Text"
                            xtype="textfield"/>
                </items>
            </fieldConfig>
        </bilder>


    </items>
</jcr:root>
